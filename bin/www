#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('proyecto:server');
var http = require('http');

/**
 * Get port from environment and store in Express.
 */
// --- INICIO DE MODIFICACIÓN ---
// 1. Importamos nuestro objeto 'db' de models/index.js
const db = require('../models');
// --- FIN DE MODIFICACIÓN ---

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

console.log('Intentando sincronizar la base de datos...');

// db.sequelize.sync() se conecta y crea las tablas si no existen
db.sequelize.sync() // Puedes usar { force: true } para borrar y recrear todo (¡cuidado!)
  .then(() => {
    console.log('✅ Base de datos sincronizada correctamente.');
    
    /**
     * Listen on provided port, on all network interfaces.
     * (Movemos estas líneas aquí adentro del .then())
     */


  })
  .catch((err) => {
    // Si la conexión falla, detenemos la app
    console.error('❌ Error al sincronizar la base de datos:', err);
    process.exit(1); // Cierra la aplicación con un código de error
  });
// --- FIN DE MODIFICACIÓN ---

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
